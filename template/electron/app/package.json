{
    "name": "electron-template",
    "version": "1.0.0",
    "main": "main.js",
    "author": "1k",
    "license": "MIT",
    "private": false,
    "repository": "https://github.com/electron/electron-quick-start",
    "keywords": [
        "Electron",
        "typescript",
        "quick",
        "start",
        "tutorial",
        "demo"
    ],
    "scripts": {
        "build": "rimraf ./main.js && webpack --env prod",
        "build-dev": "rimraf ./main.js && webpack --env dev",
        "start": "yarn build-dev && electron ./",
        "pre-package": "rimraf ./dist && yarn build",
        "package-win": "yarn pre-package && electron-builder --win --x64 --ia32",
        "package-win32": "yarn pre-package && electron-builder --win --ia32",
        "package-win64": "yarn pre-package && electron-builder --win --x64",
        "package-linux": "yarn pre-package && electron-builder --linux",
        "package-mac": "yarn pre-package && electron-builder --mac",
        "package": "yarn pre-package && electron-builder --win --ia32 --x64 --mac"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && git add ."
        }
    },
    "lint-staged": {
        "./src/**/*.{ts,tsx,js,jsx}": [
            "prettier --write",
            "eslint"
        ],
        "./test/**/*.{ts,tsx,js,jsx}": [
            "prettier --write",
            "eslint",
            "npm run test"
        ]
    },
    "build": {
        "appId": "com.electron.app",
        "productName": "electron-template",
        "artifactName": "${productName}-beta-${version}.${ext}",
        "publish": [
            {
                "provider": "generic",
                "url": ""
            }
        ],
        "files": [
            "main.js",
            "view/",
            "package.json",
            "node_modules/"
        ],
        "mac": {
            "target": [
                "dmg"
            ]
        },
        "win": {
            "target": [
                "nsis"
            ]
        },
        "linux": {
            "target": [
                "AppImage"
            ],
            "category": "Development"
        }
    },
    "devDependencies": {
        "@babel/cli": "^7.5.5",
        "@babel/core": "^7.5.5",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/plugin-proposal-object-rest-spread": "^7.9.6",
        "@babel/preset-env": "^7.9.5",
        "@babel/preset-typescript": "^7.3.3",
        "@types/electron": "^1.6.10",
        "@types/electron-builder": "^2.8.0",
        "@types/lodash": "^4.14.150",
        "@types/node": "12",
        "@typescript-eslint/eslint-plugin": "4.5.0",
        "@typescript-eslint/parser": "4.5.0",
        "babel-loader": "^8.0.6",
        "babel-plugin-lodash": "^3.3.4",
        "cross-env": "^7.0.2",
        "electron": "10.1.3",
        "electron-builder": "22.4.1",
        "electron-log": "4.1.1",
        "electron-updater": "4.3.1",
        "eslint": "6.6.0",
        "husky": "4.3.0",
        "lint-staged": "10.4.2",
        "prettier": "^2.0.4",
        "rollup": "^2.28.2",
        "ts-loader": "^7.0.1",
        "typescript": "3.5.3",
        "webpack": "4.42.0",
        "webpack-cli": "3.3.7",
        "webpackbar": "4.0.0"
    },
    "dependencies": {
        "lodash": "^4.17.15"
    }
}
