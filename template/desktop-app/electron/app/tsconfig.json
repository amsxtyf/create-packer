{
    "compilerOptions": {
        "allowJs": true,
        "module": "ESNext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ESNext",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "app",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "src/types/*"],
            "@/*": ["src/*"]
        }
    },
    "declaration": false,
    "include": ["src/**/*"]
}
