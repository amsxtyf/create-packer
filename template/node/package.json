{
    "scripts": {
        "dev": "nodemon --watch ./server-prod ./server-prod/server.js",
        "watch-ts": "rimraf ./server-prod && tsc -w",
        "build": "rimraf ./server-prod && tsc",
        "serve": "node ./server-prod/servrer.js",
        "test": "jest --forceExit --coverage --verbose"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && npm run test && git add ."
        }
    },
    "lint-staged": {
        "./{test,src}/**/*.{ts,tsx,js,jsx}": [
            "prettier --write",
            "eslint"
        ]
    },
    "devDependencies": {
        "@types/jest": "26.0.23",
        "@types/node": "13.9.8",
        "@typescript-eslint/eslint-plugin": "4.5.0",
        "@typescript-eslint/parser": "4.5.0",
        "eslint": "6.6.0",
        "husky": "4.3.0",
        "jest": "25.2.4",
        "lint-staged": "10.4.2",
        "nodemon": "2.0.2",
        "prettier": "2.0.2",
        "ts-jest": "26.1.3",
        "typescript": "3.8.3"
    },
    "dependencies": {
        "rimraf": "^3.0.2"
    }
}
